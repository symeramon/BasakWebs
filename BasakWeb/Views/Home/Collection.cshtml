@section scripts {
    <script>

    $(document).on("click", ".paira-quick-view", function () {
        $('#paira-ajax-success-message').on('hidden.bs.modal', function (e) {
  window.location = "/Home/Collection/"
})
        var picture = $(this).data('picture');
        var prid = $(this).data('productid');
        var price = $(this).data('unitprice');
        var priceold = $(this).data('unitoldprice');
        var prname = $(this).data('productname');
        $(".paira-product-image").attr("src", picture);
        $(".money").text(price+"TL");
         priceold != "0,00" ? $(".money-old").text(priceold):$(".money-old").text("");
        $(".productname").text(prname);
        // As pointed out in comments,
        // it is unnecessary to have to manually call the modal.
        // $('#addBookDialog').modal('show');
        $('.cartbtn').click(function () {
            $.ajax({
                url: '@Url.Action("AddToCart", "Cart")',
                type: "POST",
                data: { productid: prid },
                success: function () {

                }
            });
        });
    });

    </script>

}
