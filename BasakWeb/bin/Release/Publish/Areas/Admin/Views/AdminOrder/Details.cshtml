@model BasakWeb.Entities.Concrete.Order

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Detaylar</h2>

<div>
    <h4>Sipariş</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Customer.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderDate)
        </dd>

      

        <dt>
            @Html.DisplayNameFor(model => model.ShipAddress)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ShipAddress)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ShipCity)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ShipCity)
        </dd>

      
    </dl>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Details.FirstOrDefault().Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Details.FirstOrDefault().UnitPrice)
            </th>
            <th>

            </th>

        </tr>

        @foreach (var item in Model.Details)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.UnitPrice)
                </td>


            </tr>
        }
    <tr>
        <td>
            <a href='@Url.Action("SiparisveUrunSil",new { orderid = Model.OrderId})' onclick="return confirm('Emin misin?')" class="btn btn-info">Sipariş ve Ürünleri Sil</a>
            <a href='@Url.Action("SatildiKaldir",new { orderid = Model.OrderId})'  onclick="return confirm('Emin misin?')" class="btn btn-danger">Ürünler satıldı kaldır</a>
            <a href='@Url.Action("SiparisSil",new { orderid = Model.OrderId})'  onclick="return confirm('Emin misin?')" class="btn btn-primary">Siparişi Sil</a>
        </td>
    </tr>
    </table>

   
</div>
<p>
    @Html.ActionLink("Listeye Geri Dön", "Index")
</p>
