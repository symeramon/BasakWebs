@section scripts {
    <script>

function ResimDegis(idsi) {
    var resim = $("#" + idsi)
    var pic = $(resim).attr("data-image");
    var names = $(resim).attr("data-name");
    var priceolds = $(resim).attr("data-priceold");
    var prices = $(resim).attr("data-price");
    var descs = $(resim).attr("data-description");
    var Sold = $(resim).attr("data-sold");

    if (Sold == "True") {
        $("#Sold").html("<span style='color:yellow; font-size:20px; background-color:red; font-weight:bold'>Satıldı</span>");
        $('button[name ="btnsepet"]').hide();

    } else {
        $("#Sold").html("");
        $('button[name ="btnsepet"]').show();

    }
    $(".paira-product-image").attr("src", pic);
    $("#nameh1").html(names);
    priceolds != "0,00" ? $("#proldh1").html(priceolds) : $("#proldh1").html("");
    $("#prh1").html(prices);
    $("#desc").html(descs);
    var prid = $(resim).attr("data-id");
      $("#prid").val(prid);
    $.ajax({
        url: '@Url.Action("BenzerGetir")',
        type: "POST",
        data: {
            productid: prid
        },
        success: function(data) {
            var myvar = "";
            $("#relateddiv").html("");
            for (var i = 0; i < data.length; i++) {
                var soldiv = data[i].Sold == true ?
                    '<div class="product-stock-out"><span>Satıldı</span></div>' : "";
                var moneyolddiv = data[i].UnitPriceOld == "0.00" ? "" : data[i].UnitPriceOld;
                myvar += '<div class="col-sm-4 col-md-4 col-xs-12 margin-top-30">' +
                    '                                <div class="product text-center">' +
                    '                                    <div class="product-image position-r">' +
                    '                                        <a href="#">' +
                    '                                            <div class="background-overlay"></div>' +
                    '                                            <img id="rp2resim" src="' + data[i].Picture + '" alt="" class="img-responsive">' +
                    '                                        </a>' +
                    '                                    </div>' + soldiv +
                    '                                    <div class="product-hover">' +
                    '                                        <h4 id="rp2name" class="margin-clear"><a href=\'@Url.Action("Collection", "Home")\'>' + data[i].ProductName + '</a></h4>' +
                    '                                        <div class="text-center prices">' +
                    '<h3 id="rp2moneyold" class="pull-left margin-right-5 del"><del><span class="money-old' + i + '">' + moneyolddiv + '</span></del></h3>' +
                    '                                            <h3 id="rp2money" class="pull-left margin-left-5"><span class="money' + i + '">' + data[i].UnitPrice + 'TL</span></h3>' +
                    '                                        </div>' +
                     (data[i].Sold == false ? '<div class="paira-wish-compare-con wish-compare-view-cart">' +
                    '<a href="#paira-quick-view" data-picture="' + data[i].Picture + '" data-sold="' + data[i].Sold + '" data-unitprice="' + data[i].UnitPrice + '" data-unitoldprice="' + data[i].UnitPriceOld + '" data-productname="' + data[i].ProductName + '" data-productid="' + data[i].ProductId + '" class="paira-quick-view quick-view  btn btn-default"><i class="fa fa-search-plus"></i>' +
                    '                                        </a></div>':"") +
                    '                                    </div>' +
                    '                                </div>' +
                    '                            </div>';

            }
            $("#relateddiv").append(myvar)
        }
    });
    $('#paira-ajax-success-message').on('hidden.bs.modal', function(e) {
        window.location = "/Product/Index/"
    })
    $("#prid").val(prid);
}

